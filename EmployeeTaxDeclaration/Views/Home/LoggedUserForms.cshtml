@model ViewModal
<div class="container">
    <h2 class="text-center">Previous Forms</h2>
    <div class="row">
        <div class="col-lg-12 mx-auto">
            <table class="table table-dark table-striped">
                <thead>
                    <tr>
                        <th scope="col">Name</th>
                        <th scope="col">Financial Year</th>
                        <th scope="col">Email Address</th>
                        <th scope="col">Declaraton Status</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var taxForm in Model.Form)
                    {
                        <tr>
                            <td>@taxForm.User.FirstName @taxForm.User.LastName</td>
                            <td>@taxForm.FinancialYear</td>
                            <td>@taxForm.User.Email</td>
                            <td>@taxForm.DeclarationStatus</td>
                            <td><a asp-controller="Home" asp-action="ShowDisplay" asp-route-id="@taxForm.Id" class="btn btn-primary">Show</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <nav aria-label="Page navigation example">
            <ul class="pagination">
                @if (Model.CurrentPage > 1)
                {
                    <li class="page-item"><a class="page-link" href="/Home/LoggedUserForms?currentPage=@(Model.CurrentPage-1)">Previous</a></li>
                }
                @for (int i = 1; i <= Model.TotalPage; i++)
                {
                    @if (i == Model.CurrentPage)
                    {
                        <li class="page-item"><a class="page-link active" href="/Home/LoggedUserForms?currentPage=@Model.CurrentPage">@i</a></li>
                    }
                    else
                    {
                        <li class="page-item"><a class="page-link" href="/Home/LoggedUserForms?currentPage=@i">@i</a></li>
                    }
                }
                @if (Model.CurrentPage < Model.TotalPage)
                {
                    <li class="page-item"><a class="page-link" href="/Home/LoggedUserForms?currentPage=@(Model.CurrentPage+1)">Next</a></li>
                }
            </ul>
        </nav>
    </div>

</div>