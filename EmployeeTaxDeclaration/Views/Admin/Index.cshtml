@model ViewModal
<div class="container">
    <div class="col-lg-10 mx-auto p-3">
        <form asp-action="Index">
            <div class="row g-3 align-items-center">
                <div class="col-auto">
                    <label for="financialYear" class="visually-hidden">Financial Year:</label>
                    <select class="form-select" id="financialYear" name="financialYear">
                        <option value="@DateTime.Parse(DateTime.Now.ToString()).Year">@DateTime.Parse(DateTime.Now.ToString()).Year</option>
                        <option value="@(@DateTime.Parse(DateTime.Now.ToString()).Year-1)">  @(@DateTime.Parse(DateTime.Now.ToString()).Year - 1)</option>
                        <option value="@(@DateTime.Parse(DateTime.Now.ToString()).Year-2)">  @(@DateTime.Parse(DateTime.Now.ToString()).Year - 2)</option>
                        <option value="@(@DateTime.Parse(DateTime.Now.ToString()).Year -3)"> @(@DateTime.Parse(DateTime.Now.ToString()).Year - 3)</option>
                        <option value="@(@DateTime.Parse(DateTime.Now.ToString()).Year - 4)">@(@DateTime.Parse(DateTime.Now.ToString()).Year - 4)</option>
                        <option value="@(@DateTime.Parse(DateTime.Now.ToString()).Year - 5)">@(@DateTime.Parse(DateTime.Now.ToString()).Year - 5)</option>
                    </select>
                </div>
                <div class="col-auto">
                    <label for="employeeId" class="visually-hidden">Employee ID:</label>
                    <input type="text" class="form-control" id="employeeId" name="employeeId" placeholder="Employee ID">
                </div>

                <div class="col-auto">
                    <label for="employeeName" class="visually-hidden">Employee Name:</label>
                    <input type="text" class="form-control" id="employeeName" name="employeeName" placeholder="Employee Name">
                </div>

                <div class="col-auto">
                    <label for="declarationStatus" class="visually-hidden">Declaration Status:</label>
                    <select class="form-select" id="declarationStatus" name="declarationStatus">
                        <option value="" selected>Choose...</option>
                        <option value="Submited">Submitted</option>
                        <option value="Accepted">Accepted</option>
                    </select>
                </div>

                <div class="col-auto">
                    <button type="submit" class="btn btn-primary">Search</button>
                </div>
            </div>
        </form>
    </div>
    
    <div class="row">
        <div class="col-lg-12 mx-auto">
            <table class="table table-dark table-striped">
                <thead>
                    <tr>
                        <th scope="col">Name</th>
                        <th scope="col">Financial Year</th>
                        <th scope="col">Email Address</th>
                        <th scope="col">Declaraton Status</th>
                        <th scope="col">Declaraton Status</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var taxForm in Model.Form)
                    {
                        <tr>
                            <td>@taxForm.User.FirstName @taxForm.User.LastName</td>
                            <td>@taxForm.FinancialYear</td>
                            <td>@taxForm.User.Email</td>
                            <td>@taxForm.DeclarationStatus</td>
                            <td><a asp-controller="Admin" asp-action="ShowDisplay" asp-route-id="@taxForm.Id" class="btn btn-primary">Update</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</div>