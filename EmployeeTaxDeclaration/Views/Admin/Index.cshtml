<div class="container">
    <div class="col-lg-10 mx-auto p-3">
        <form>
            <div class="row g-3 align-items-center">
                <!-- Financial Year Field -->
                <div class="col-auto">
                    <label for="financialYear" class="visually-hidden">Financial Year:</label>
                    <input type="text" class="form-control" id="financialYear" placeholder="Financial Year">
                </div>

                <!-- Employee ID Field -->
                <div class="col-auto">
                    <label for="employeeId" class="visually-hidden">Employee ID:</label>
                    <input type="text" class="form-control" id="employeeId" placeholder="Employee ID">
                </div>

                <!-- Employee Name Field -->
                <div class="col-auto">
                    <label for="employeeName" class="visually-hidden">Employee Name:</label>
                    <input type="text" class="form-control" id="employeeName" placeholder="Employee Name">
                </div>

                <!-- Declaration Status Field -->
                <div class="col-auto">
                    <label for="declarationStatus" class="visually-hidden">Declaration Status:</label>
                    <select class="form-select" id="declarationStatus">
                        <option selected>Choose...</option>
                        <option value="1">Submitted</option>
                        <option value="2">Not Submitted</option>
                    </select>
                </div>

                <!-- Search Button -->
                <div class="col-auto">
                    <button type="submit" class="btn btn-primary">Search</button>
                </div>
            </div>
        </form>
    </div>
    
    <div class="row">
        <div class="col-lg-12 mx-auto">
            <table class="table table-dark table-striped">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">First</th>
                        <th scope="col">Last</th>
                        <th scope="col">Handle</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <th scope="row">1</th>
                        <td>Mark</td>
