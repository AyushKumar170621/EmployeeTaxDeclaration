@model TaxForm

<div class="container rounded border p-3 showBg">
    <div class="container my-4">
        <div class="row">
            <div class="col-md-8">
                <h2 class="mb-3">Tax Declaration</h2>
                <p><strong>Financial Year:</strong> @Model.FinancialYear</p>
                <p><strong>1. Any other income:</strong> @Model.OtherIncome</p>
                <dl>
                    <dt class="mb-2"><p>2. Investment Under Section 80C.</p></dt>
                    <dd class="mx-5">
                        <p><strong>a. Sukanya Samriddhi Account:</strong> @Model.SukSamAcc</p>
                        <p><strong>b. PPF/NSC/ULIP:</strong> @Model.Ppf</p>
                        <p><strong>c. Life Insurance Premium:</strong> @Model.LifeInsurance</p>
                        <p><strong>d. Tuition fee for child:</strong> @Model.TuitionFee</p>
                        <p><strong>e. Bank Fixed Deposit:</strong> @Model.FixedDeposit</p>
                        <p><strong>f. Principal amount of housing loan paid:</strong> @Model.PrincipalAmount</p>
                    </dd>
                </dl>

                <p><strong>3. National Pension Scheme 80CCD(18):</strong> @Model.NPS</p>
                <p><strong>4. Higher Education Loan interest:</strong> @Model.HighEduLoan</p>
                <p><strong>5. Interest paid on Housing Loan:</strong> @Model.HousingLoanInterest</p>
                <p><strong>6. House Rent paid:</strong> @Model.HouseRent</p>
                <p><strong>7. TDS by previous employer:</strong> @Model.TDS</p>
                <p><strong>8. Medi-claim insurance policy-premium:</strong> @Model.MediClaim</p>
                <p><strong>9. Preventive Health check-up:</strong> @Model.FamilyHealth</p>
                @if (Model.LTA)
                {
                    <p><strong>LTA:</strong> Yes</p>
                }
                else
                {
                    <p><strong>LTA:</strong> No</p>
                }
                @if (Model.EduAllowance)
                {
                    <p><strong>Education Allowance:</strong> Yes</p>
                }
                else
                {
                    <p><strong>Education Allowance:</strong> No</p>
                }
                @if (Model.DeclarationStatus == "Submited")
                {
                    <div class="text-center">
                        <a asp-controller="Admin" asp-action="ChangeFreeze" asp-route-id="@Model.Id" class="btn btn-primary m-1"><i class="bi bi-unlock-fill"> </i>Unfreeze</a>
                        <a asp-controller="Admin" asp-action="Decline" asp-route-id="@Model.Id" class="btn btn-danger m-1"><i class="bi bi-x-square-fill"></i> Decline</a>
                    </div>
                }
            </div>
            <div class="col-md-4">
                <!-- Profile Picture -->
                <img src="@Url.Content("~/images/"+Model.User.ProfilePic)" alt="Profile Picture" class="img-fluid rounded profile-pic">
                <div class="py-3">
                    <p><strong>Employee Name:</strong> @Model.User.FirstName @Model.User.LastName</p>
                    <p><strong>Pan Number:</strong> @Model.User.PanNumber</p>
                    <p><strong>Social Security Number:</strong> @Model.User.SocialSecurityNumber</p>
                    <p><strong>Address:</strong> @Model.User.Address</p>
                    <p><strong>Email:</strong> @Model.User.Email</p>
                </div>
            </div>
        </div>
    </div>
</div>
