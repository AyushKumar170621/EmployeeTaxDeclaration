@model TaxForm
<div class="container border rounder p-3 bgOuter">
    <h1>Employee Details</h1>
    <div class="row border rounded m-3 p-2 formBg text-black">
        <div class="col-lg-5 mx-auto">
            <p><strong>Name :</strong>@ViewBag.EmpName</p>
            <p><strong>Phone :</strong>@ViewBag.Phone</p>
        </div>
        <div class="col-lg-5 mx-auto">
            <p><strong>Financial Year :</strong>@ViewBag.finYear</p>
            <p><strong>Email :</strong>@ViewBag.Email</p>
        </div>
    </div>
    <form method="post" id="taxForm" class="row m-3">
        <div class="col-lg-10 mx-auto p-3">
            <div class="row rounded border mx-auto formBg text-black p-3">
            <div class="col-md-10 mx-auto ">
                <div class="mb-3">
                    <label asp-for="OtherIncome"></label>
                    <input asp-for="OtherIncome" class="form-control" />
                    <span asp-validation-for="OtherIncome" class=" text-danger"></span>
                </div>
                <div class=" mb-3">
                    <dl>
                        <dt>2. Investment Under Section 80C.</dt>
                        <dd class="mx-5">
                            <div class="mb-3">
                                <label asp-for="SukSamAcc"></label>
                                <input asp-for="SukSamAcc" class="form-control"/>
                                <span asp-validation-for="SukSamAcc" class=" text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Ppf"></label>
                                <input asp-for="Ppf" class="form-control" />
                                <span asp-validation-for="Ppf" class=" text-danger"></span>
                             </div>
                        
                            <div class="mb-3">
                            <label asp-for="LifeInsurance"></label>
                            <input asp-for="LifeInsurance" class="form-control" />
                            <span asp-validation-for="LifeInsurance" class=" text-danger"></span>
                            </div>
                        
                            <div class="mb-3">
                            <label asp-for="TuitionFee"></label>
                            <input asp-for="TuitionFee" class="form-control" />
                            <span asp-validation-for="TuitionFee" class=" text-danger"></span>
                            </div>
                        
                            <div class="mb-3">
                            <label asp-for="FixedDeposit"></label>
                            <input asp-for="FixedDeposit" class="form-control" />
                            <span asp-validation-for="FixedDeposit" class=" text-danger"></span>
                            </div>
                        
                            <div class="mb-3">
                            <label asp-for="PrincipalAmount"></label>
                            <input asp-for="PrincipalAmount" class="form-control" />
                            <span asp-validation-for="PrincipalAmount" class=" text-danger"></span>
                            </div>
                        </dd>
                    </dl>
                </div>
                <div class="mb-3">
                     <label asp-for="NPS"></label>
                     <input asp-for="NPS" class="form-control" />
                     <span asp-validation-for="NPS" class=" text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="HighEduLoan"></label>
                    <input asp-for="HighEduLoan" class="form-control" />
                    <span asp-validation-for="HighEduLoan" class=" text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="HousingLoanInterest"></label>
                    <input asp-for="HousingLoanInterest" class="form-control" />
                    <span asp-validation-for="HousingLoanInterest" class=" text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="HouseRent"></label>
                    <input asp-for="HouseRent" class="form-control" />
                    <span asp-validation-for="HouseRent" class=" text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="TDS"></label>
                    <input asp-for="TDS" class="form-control" />
                    <span asp-validation-for="TDS" class=" text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="MediClaim"></label>
                    <input asp-for="MediClaim" class="form-control" />
                    <span asp-validation-for="MediClaim" class=" text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="FamilyHealth"></label>
                    <input asp-for="FamilyHealth" class="form-control" />
                    <span asp-validation-for="FamilyHealth" class=" text-danger"></span>
                </div>
                <input type="hidden" name="isSubmit" id="isSubmit" value="true"/>
            </div>
        </div>
         <h2 class="p-1">Reimbursement Component</h2>
            <div class="row mx-auto rounded border formBg text-black">
                <div class="col-lg-10 ">
                    <div class="mb-3">
                    <label asp-for="LTA" class="form-check-label"></label>
                    <input asp-for="LTA" type="checkbox" class="form-check-input" />
                    <span asp-validation-for="LTA" class=" text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="EduAllowance" class="form-check-label"></label>
                    <input asp-for="EduAllowance" type="checkbox" class="form-check-input" />
                    <span asp-validation-for="EduAllowance" class=" text-danger"></span>
                </div>
               </div>
            </div>
            <div class="row m-3">
                <div class="col-lg-5 mx-auto">
                    <p><strong>Name :</strong>@ViewBag.EmpName</p>
                    <p><strong>Social Security Number :</strong>@ViewBag.Ssn</p>
                </div>
                <div class="col-lg-5 mx-auto">
                    <p><strong>Pan Number :</strong>@ViewBag.PanNo</p>
                    <p><strong>Address :</strong>@ViewBag.Addr</p>
                </div>
            </div>
        </div>
        <div class="d-flex justify-content-center">
            <button onclick="saveForm()" class="w-40 btn btn-primary m-1"><i class="bi bi-file-earmark-plus"></i> Save</button>
            <button type="submit" class="w-40 btn btn-success m-1"><i class="bi bi-arrow-up-square-fill"></i> Submit</button>
        </div>
    </form>
</div>
<script>
    function saveForm(){
        document.getElementById("isSubmit").value = "false";
        document.getElementById("taxForm").submit();
    }
</script>
